<h2>Sign In</h2>
<h3>
  No account yet? <%= link_to "Sign up!", signup_path %>
</h3>

<%= form_with(url: session_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, autofocus: true, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.submit "Sign In" %>
<% end %>
